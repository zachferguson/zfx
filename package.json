        "eslint-plugin-unused-imports": "^4.2.0",
        "globals": "^16.4.0",
        "nodemon": "^3.1.9",
        "pg-mem": "^3.0.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
