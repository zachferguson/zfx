        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.10.0",
        "pg": "^8.13.1",
        "pg-promise": "^11.10.2",
        "stripe": "^17.6.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
