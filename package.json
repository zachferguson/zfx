    "private": true,
    "main": "index.js",
    "engines": {
        "node": "20.19.x"
    },
    "scripts": {
        "start": "cross-env BASE_URL=https://zfxapi.com node dist/server.js",
        "dev": "cross-env BASE_URL=https://zfxapi.com ts-node-dev src/server.ts",
        "clean": "rimraf dist",
